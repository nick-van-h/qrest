<div class="modal" id="modal-newCollection" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<a onclick="halfmoon.toggleModal('modal-newCollection')" class="close" role="button" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</a>
			<h5 class="modal-title">Create new collection</h5>
			<form id="newCollectionForm">
				<div class="form-group">
					<label for="collectionName" class="required">Name</label>
					<input id="collectionName" type="text" name="collectionName" class="form-control" placeholder="Collection" required="required"/>
				</div>

				<div class="text-right">
					<input class="btn btn-primary btn-block" type="submit" value="Create collection"/>
				</div>
			</form>
		</div>
	</div>
</div>
